<% title "Login" %>

<h1 align='center'>Login</h1>

<div class="padding-60px"></div>

<div class="row">
    <div class="col-sm-10">
        <%= form_for :session, :html => {class: "form-horizontal", role: "form", url: login_path} do |f| %>
            <div class="form-group-lg col-sm-offset-4">
                <div class="control-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-6">
                    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
                </div>
            </div>
            <div class="padding-60px"></div>
            <div class="form-group-lg col-sm-offset-4">
                <div class="control-label col-sm-2">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-6">
                    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
                </div>
            </div>
            <div class="padding-60px"></div>
            <div class="form-group-lg col-sm-offset-4 remember-me">
                <div class="col-sm-10 col-sm-offset-2">
                  <%= f.label :remember_me  do %>
                    <%= f.check_box :remember_me %>
                    Remember me on this computer
                  <% end %>
                </div>
            </div>
            <div class="form-group-lg col-sm-offset-4">
                <div class="col-sm-10 col-sm-offset-2">
                    <%= f.submit "Log in", class: "btn btn-primary btn-lg"  %>
                </div>
            </div>
            <div class="padding-60px"></div>
            <div class="col-sm-offset-4">
                <div class="col-sm-6 col-sm-offset-2"><%= link_to "New user? Sign up now!", signup_path %></div>
            </div>
        <% end %>
    </div>
</div>
